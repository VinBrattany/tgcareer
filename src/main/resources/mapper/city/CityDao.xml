<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.main.tgcareer.modules.city.dao.CityDao">
     <sql id="cityColumns">
               a.id as id,
               a.parentid as parentid,
               a.name as name,
     </sql>

    <select id="getCity" resultType="com.main.tgcareer.modules.city.entity.City">
            SELECT
            <include refid="collegeColumns" />
            FROM college a
            WHERE a.id = #{id}
    </select>

    <insert id="saveCity">
            INSERT INTO city(
            id,
            parentid,
            name,
            ) VALUES (
            #{id},
            #{parentid},
            #{name},
            )
    </insert>

    <update id="updateCity">
            UPDATE city
            <set>
            <if test="parentid != null">
                parentid = #{parentid},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            </set>
            WHERE id = #{id}
    </update>

    <delete id="deleteCity">
                    delete FROM city
                    WHERE id = #{id}
    </delete>
</mapper>