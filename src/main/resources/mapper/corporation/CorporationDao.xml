<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.main.tgcareer.modules.corporation.dao.CorporationDao">
     <sql id="corporationColumns">
               a.id as id,
               a.name as name,
     </sql>

    <select id="getCorporation" resultType="com.main.tgcareer.modules.corporation.entity.Corporation">
            SELECT
            <include refid="corporationColumns" />
            FROM corporation a
            WHERE a.id = #{id}
    </select>

    <insert id="saveCorporation">
            INSERT INTO corporation(
            id,
            name,
            ) VALUES (
            #{id},
            #{name},
            )
    </insert>

    <update id="updateCorporation">
            UPDATE corporation
            <set>
            <if test="name != null">
                name = #{name},
            </if>
            </set>
            WHERE id = #{id}
    </update>

    <delete id="deleteCorporation">
                    delete corporation
                    WHERE id = #{id}
    </delete>
</mapper>